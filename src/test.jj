TOKEN :
{
    <quote: "\"">
}
TOKEN :
{
    <alphanumeric: ["a"-"z"] | ["A"-"Z"] | ["0"-"9"] | "." | "/" | ":">
}
TOKEN :
{
    <sentence: (<alphanumeric>)+ | ("")>
}

TOKEN :
{
    <string: (["a"-"z"])+ | (["A"-"Z"])+ | (["0"-"9"])+>
}


